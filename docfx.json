{
  "metadata": [
    {
      "src": [
        {
          "files": [ "**.sln" ],
          "exclude": [ "**/bin/**", "**/obj/**" ],
          "src": "src",
          "properties": {
            "TargetFramework": "netstandard2.0"
          }
        }
      ],
      "dest": "systemapi"
    }
  ],
  "build": {
    "content": [
      {
        "files": [ "architecture/**/*.md", "userstories/**/*.md", "*.md", "toc.yml", "webapi/**", "systemapi/**"  ]
      }
    ],
    "resource": [
      {
        "files": [ "**/*.yml" ],
        "src": "obj/api",
        "dest": "api"
      },
      {
        "files": [ "architecture/images/**"]
      }
    ],
    "overwrite": "specs/*.md",
    "globalMetadata": {
      "_appTitle": "Ticket system documentation",
      "_enableSearch": true
    },
    "dest": "_site"
  }
}
