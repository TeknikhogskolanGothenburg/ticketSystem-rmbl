}

<div class="container">
    <div class="ticket">
        <div class="right-side">
            <p id="FlightService">RMBL FlightServices</p>
            <br>
            <div class="row">
                <div class="col">
                    <h5>Abbriviation</h5>
                    <p>Master</p>
                </div>
                <div class="col">
                    <h5>First Name</h5>
                    <p>Sensei</p>
                </div>
                <div class="col">
                    <h5>Last Name</h5>
                    <p>Teacher</p>
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <h5>From</h5>
                    <p>Dubai</p>
