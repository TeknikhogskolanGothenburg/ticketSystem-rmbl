@using BackOffice.Helpers
@using BackOffice.Models
@using Microsoft.AspNetCore.Html

@{
    HtmlContentBuilder alertMessages = null;
    if (ViewData.ContainsKey("Messages"))
    {
        MessagesHandler messages = ((MessagesHandler)ViewData["Messages"]);

        if (messages.Messages.Count > 0)
        {
            alertMessages = MessagesHelper.Alerts(messages.Messages);

            messages.RemoveAll();
        }
    }
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BackOffice</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet"/>
    <link href="~/css/site.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/site.js"></script>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">RMBL</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="AddFlight">Add a new Flight</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Users" asp-action="Index">Edit Users</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Documentation">Documentation</a>
                </li>
            </ul>
            <ul class="navbar-nav justify-content-end">
                <li class="nav-item">
                    <a class="navbar-brand">
                        <img src="~/images/pina-colada.svg" width="40" height="40" alt="Alternate Text" />
                    </a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container">
        @alertMessages
        @RenderBody()
    </div>
</body>
</html>
